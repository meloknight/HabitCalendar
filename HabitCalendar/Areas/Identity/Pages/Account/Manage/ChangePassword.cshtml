@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="identity-form__title">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="identity-form__field-container">
                <label asp-for="Input.OldPassword" class="form-label identity-form__label"></label>
                <input asp-for="Input.OldPassword" class="form-control identity-form__input" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="identity-form__field-container">
                <label asp-for="Input.NewPassword" class="form-label identity-form__label"></label>
                <input asp-for="Input.NewPassword" class="form-control identity-form__input" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="identity-form__field-container">
                <label asp-for="Input.ConfirmPassword" class="form-label identity-form__label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control identity-form__input" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="identity-form__button">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
