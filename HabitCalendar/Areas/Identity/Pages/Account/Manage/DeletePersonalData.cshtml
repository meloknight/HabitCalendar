@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="identity-form__title">@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p class="identity-form__paragraph">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="identity-form__field-container">
                <label asp-for="Input.Password" class="form-label identity-form__label"></label>
                <input asp-for="Input.Password" class="form-control identity-form__input" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="identity-form__button identity-form__delete-button" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
