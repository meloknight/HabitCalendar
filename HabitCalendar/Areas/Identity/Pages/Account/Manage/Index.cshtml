@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="change-container">
    <h3 class="identity-form__title">@ViewData["Title"]</h3>
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="identity-form__field-container">
                <label asp-for="Username" class="identity-form__label">Email</label>
                <input asp-for="Username" class="identity-form__input" placeholder="Please choose your username." disabled />
            </div>
            <div class="identity-form__field-container">
                <label asp-for="Input.DisplayUserName" class="identity-form__label">Current Username</label>
                <input asp-for="Input.DisplayUserName" class="identity-form__input" aria-required="true" disabled/>
                @* <span asp-validation-for="Input.DisplayUserName" class="text-danger"></span> *@
            </div>
            <div class="identity-form__field-container">
                <label asp-for="Input.DisplayUserName" class="identity-form__label">Update Username</label>
                <input asp-for="Input.DisplayUserName" class="identity-form__input" aria-required="true" placeholder="new username" value=""/>
                <span asp-validation-for="Input.DisplayUserName" class="text-danger"></span>
            </div>
            @* <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div> *@
            <button id="update-profile-button" type="submit" class="identity-form__button">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
