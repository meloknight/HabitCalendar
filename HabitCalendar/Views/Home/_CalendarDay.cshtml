@using HabitCalendar.Models
@model CalendarDisplayModel;

@{
    bool isBigX = false;
    bool isCircle = false;
    bool isStar = false;
    bool isLongText = true;
    bool isShortText = true;
    string longTextValue = "";
    string shortTextValue = "";

    foreach(HabitDisplayModel habit in Model.habitsCompleted)
    {
        if(habit.HabitDisplayMethod == "Big X")
        {
            isBigX = habit.isHabitCompleted;
        }
        if ( habit.HabitDisplayMethod == "Circle" )
        {
            isCircle = habit.isHabitCompleted;
        }
        if ( habit.HabitDisplayMethod == "Star" )
        {
            isStar = habit.isHabitCompleted;
        }
        if ( habit.HabitDisplayMethod == "Long Text" )
        {
            isLongText = habit.isHabitCompleted;
            longTextValue = habit.HabitDayValue;
        }
        if ( habit.HabitDisplayMethod == "Short Text" )
        {
            isShortText = habit.isHabitCompleted;
            shortTextValue = habit.HabitDayValue;
        }
    }

    <div class="day-container__inner-container">
        <div class="day-container__top-container">
            <div class="day-container__day">@Model.Date.Day</div>
            <div class="day-container__top-right">
                @if ( isShortText == true )
                {
                    <div>@shortTextValue</div>
                }
            </div>
        </div>
        <div class="day-container__middle-container">
            <div class="day-container__big-x">
                @if(isBigX == true)
                {
                    <i class="fa-solid fa-xmark"></i>
                }
            </div>
            <div class="day-container__circle">
                @if ( isCircle == true )
                {
                    <i class="fa-solid fa-o"></i>
                }
            </div>
            <div class="day-container__star">
                @if ( isStar == true )
                {
                    <i class="fa-regular fa-star"></i>
                }
            </div>
        </div>
        <div class="day-container__bottom-container">
            
            @if (isLongText == true) {
                <div>@longTextValue</div>
            }
        </div>
    </div>
}







