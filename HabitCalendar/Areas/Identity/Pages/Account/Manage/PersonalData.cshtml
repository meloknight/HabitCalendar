@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="identity-form__title">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p class="identity-form__paragraph">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="identity-form__paragraph">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <div class="identity-form__two-button-container">
            <form class="identity-form" id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="identity-form__button" type="submit">Download</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="identity-form__button identity-form__delete-button">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
