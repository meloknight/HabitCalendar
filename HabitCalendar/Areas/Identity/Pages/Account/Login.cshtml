@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="identity-form">
    <div class="identity-form__inner-container">
            <h1 class="identity-form__title">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                @* <h2>Use a local account to log in.</h2> *@
                @* <hr /> *@
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="identity-form__field-container">
                    <label asp-for="Input.Email" class="identity-form__label">Email</label>
                    <input asp-for="Input.Email" class="identity-form__input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="identity-form__field-container">
                    <label asp-for="Input.Password" class="identity-form__label">Password</label>
                    <input asp-for="Input.Password" class="identity-form__input" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="identity-form__button-remember-container">
                    <div>
                        <button id="login-submit" type="submit" class="identity-form__button">Log in</button>
                    </div>
                    <div class="checkbox identity-form__checkbox-container">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                </div>
                <div>
                    <p class="identity-form__bottom-options">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="identity-form__bottom-options">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p class="identity-form__bottom-options">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
